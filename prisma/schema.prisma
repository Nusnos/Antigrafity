generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Meeting {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title        String
  date         DateTime      @db.Date
  time         DateTime      @db.Time(6)
  location     String?
  createdAt    DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  status       Status        @default(UPCOMING)
  agenda       AgendaItem[]
  notes        Note[]
  participants Participant[]
  resources    Resource[]
  tags         Tag[]         @relation("MeetingToTag")

  @@map("meetings")
}

model Resource {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  meetingId String   @map("meeting_id") @db.Uuid
  title     String
  url       String
  type      String   @default("LINK")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@map("resources")
}

model Tag {
  id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String    @unique
  meetings Meeting[] @relation("MeetingToTag")

  @@map("tags")
}

model AgendaItem {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  meetingId   String  @map("meeting_id") @db.Uuid
  title       String
  description String?
  isDone      Boolean @default(false) @map("is_done")
  meeting     Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@map("agenda_items")
}

model Participant {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  meetingId String  @map("meeting_id") @db.Uuid
  name      String
  email     String
  isPresent Boolean @default(false) @map("is_present")
  meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@map("participants")
}

model Note {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  meetingId String  @map("meeting_id") @db.Uuid
  content   String?
  meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@map("notes")
}

enum Status {
  UPCOMING
  ACTIVE
  COMPLETED
  CANCELLED
}
